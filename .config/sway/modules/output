# swayconfig:
# output configuration

output * bg "${HOME}/Pictures/Wallpapers/62e3d21226fb5.png" fill

# clamshell mode
set $laptop "eDP-1"
bindswitch --reload --locked lid:on $laptop disable
bindswitch --reload --locked lid:off $laptop enable
exec_always "${HOME}/.config/sway/scripts/clamshell"

exec swayidle -w \
  timeout 300 'if pgrep -x swaylock; then swaymsg "output * dpms off"; fi' \
  resume 'swaymsg "output * dpms on"' \
  before-sleep 'playctl --all-players pause'
