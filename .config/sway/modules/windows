# ft=swayconfig
# window management

# Window rules
for_window [workspace="1"] layout tabbed
for_window [workspace="4"] layout tabbed
for_window [window_role="pop-up"] floating enable
for_window [app_id="blueman-manager"] floating enable
for_window [app_id="pavucontrol"] {
  floating enable 
  # set width & height to 100%
  # move to top left corner
  # then resize (this centers the item)
  resize set height 100ppt width 100ppt 
  move position 0 0
  resize set height 525 px width 750 px
}
for_window [app_id="cava"] {
  floating enable
  resize set height 525 px width 750 px
  move position 1135 490
}
for_window [class="Spotify"] {
  floating enable
  resize set height 100ppt width 100ppt
  move position 0 0
  resize set height 1320 px width 2350 px
  # spotify is stubborn
  move to workspace number 5
}
for_window [app_id="mpv"] {
  border none 
  floating enable
  sticky enable
}

# assignments
assign [app_id="brave-browser"] workspace number 1
assign [app_id="work"] workspace number 2
assign [app_id="config"] workspace number 3
assign [class="Ferdium"] workspace number 4
assign [app_id="neomutt"] workspace number 4
assign [app_id="cava"] workspace number 5
assign [class="Spotify"] workspace number 5
assign [class="1Password"] workspace number 7

# Autostart programs (after assignment - duh!)
exec brave-browser &
exec kitty &
exec flatpak run com.spotify.Client &
exec 1password &
exec ferdium \
  --auth-server-whitelist '*.redhat.com' \
  --auth-negotiate-delegate-whitelist '*.redhat.com' &
